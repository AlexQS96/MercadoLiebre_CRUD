<div class="col-12 col-sm-6 col-lg-3" id="<%- product.id %>">
    <section class="product-box">
        <a href="/products/detail/<%- product.id %>">
            <figure class="product-box_image">
                <img src="/images/products/<%- product.image %>" alt="imagen de producto">
            </figure>
            <article class="product-box_data">
                <h2>$ <%- toThousand(product.price - product.price * product.discount / 100)%></h2>
                <% if (product.discount > 0) { %>
                    <span><%- product.discount !== 0 ? `${product.discount}% OFF` : ""%></span>
                <% } else { %>

                <% } %>
                <p><%- product.name %></p>
                <i class="fas fa-truck"></i>
            </article>
        </a>
    </section>
</div>